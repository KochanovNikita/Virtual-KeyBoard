{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "double"],
        "for-direction": "error",
        "getter-return": "error",
        "no-const-assign": "error",
        "no-invalid-regexp": "error",
        "no-unsafe-negation": "error",
        "valid-typeof": "error",
        "arrow-body-style": ["error", "as-needed"],
        "camelcase": "error",
        "default-case": "error",
        "func-name-matching": ["error", "always"],
        "no-console": "warn",
        "no-empty-function": "error",
        "no-var": "error"
    }
}
